<div class="row">
  <div class="col-md-12">
    <%=simple_form_for(@house, html: { class: "form-horizontal" }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%=f.input :title%>
        <%=f.input :description%>
        <%=f.input :address%>
        <%=f.input :postcode%>
      </div>
      <div class="form-actions">
        <%=f.submit class: "btn btn-primary"%>
        <%=link_to "Back", root_path, class: "btn btn-default"%>
      </div>
    <%end%>
  </div>
</div>
